    <build>

        <resources>
            <resource>
                <directory>${pom.basedir}/src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
            <resource>
                <directory>${pom.basedir}/src/main/filtered-resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
        <plugins>

            <!-- Unpack some agent files -->

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.josso</groupId>
                                    <artifactId>josso-agents-bin</artifactId>
                                    <version>${pom.version}</version>
                                    <classifier>3rdparty</classifier>
                                    <type>tar.gz</type>
                                    <outputDirectory>${project.build.directory}/3rdparty</outputDirectory>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.josso</groupId>
                                    <artifactId>josso-agents-j14bin</artifactId>
                                    <version>${pom.version}</version>
                                    <classifier>3rdparty-j14</classifier>
                                    <type>tar.gz</type>
                                    <outputDirectory>${project.build.directory}/jdk14/3rdparty</outputDirectory>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.josso</groupId>
                                    <artifactId>josso-agents-j14bin</artifactId>
                                    <version>${pom.version}</version>
                                    <classifier>3rdparty-j14axis</classifier>
                                    <type>tar.gz</type>
                                    <outputDirectory>${project.build.directory}/jdk14/3rdparty-axis</outputDirectory>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.josso</groupId>
                                    <artifactId>josso-wasce-agent</artifactId>
                                    <version>${pom.version}</version>
                                    <classifier>repo</classifier>
                                    <type>tar.gz</type>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.josso</groupId>
                                    <artifactId>josso-wasce-agent</artifactId>
                                    <version>${pom.version}</version>
                                    <type>car</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/josso-wasce2-agent</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unix-bin</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/unix-bin.xml</descriptor>
                                <descriptor>src/main/assembly/windows-bin.xml</descriptor>
                            </descriptors>
                            <finalName>${pom.artifactId}-${pom.version}</finalName>
                            <tarLongFileMode>gnu</tarLongFileMode>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

