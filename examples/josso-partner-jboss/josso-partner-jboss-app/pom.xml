    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.josso</groupId>
        <artifactId>josso-partner-jboss</artifactId>
        <version>1.8.9</version>
    </parent>

    <artifactId>josso-partner-jboss-app</artifactId>
    <packaging>ear</packaging>
    <name>JOSSO :: JBoss Partner Application (EAR)</name>
    <description>JOSSO JBoss Partner Application (EAR)</description>

    <dependencies>
        <dependency>
            <groupId>org.josso</groupId>
            <artifactId>josso-partner-jboss-web</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.josso</groupId>
            <artifactId>josso-partner-jboss-ejb</artifactId>
            <type>ejb</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <modules>
                        <webModule>
                            <groupId>org.josso</groupId>
                            <artifactId>josso-partner-jboss-web</artifactId>
                            <contextRoot>/partnerapp</contextRoot>
                        </webModule>
                        <ejbModule>
                            <groupId>org.josso</groupId>
                            <artifactId>josso-partner-jboss-ejb</artifactId>
                        </ejbModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
